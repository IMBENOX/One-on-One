<%layout('layouts/boilerplate')%>
   <% block('head').append('<title>Sign Up</title>') %>
   <% block('head').append('<link rel="stylesheet" href="../styles/signup.css">') %>

<div id="formContainer">
    <form action="/signup" id="form" method="POST">
        <h2>Create your account </h2>
        <div>
            <label for="firstNameInput">First Name</label>
            <input id="firstNameInput" type="text" name="user[firstName]" placeholder=" Your name...">
            <span id="validationMsgFirstName"></span>
        </div>

        <div>
            <label for="lastNameInput">Last Name</label>
            <input id="lastNameInput" type="text" name="user[lastName]" placeholder="Your last name...">
            <span id="validationMsgLastName"></span>
        </div>

        <div>
            <label for="emailInput">Email</label>
            <input id="emailInput" type="text" name="user[email]" placeholder="Your email...">
            <span id="validationMsgEmail"><%= message %></span>
        </div>
        <div>
            <label for="passwordInput">Password</label>
            <input id="passwordInput" type="password" name="user[password]" placeholder="Your password...">
            <span id="validationMsgPassword"></span>
        </div>

        <div id="radioButtons">
            <p>Gender</p>
            <label for="male">Male</label>
            <label class="custom-radio-btn">
                <input id="male" type="radio" name="user[gender]" value="male">
                <span class="checkmark"></span>
            </label>
            <label for="female">Female</label>
            <label class="custom-radio-btn">
                <input id="female" type="radio" name="user[gender]" value="female">
                <span class="checkmark"></span>
            </label>
        </div>

        <div class="selectContainer">
            <label for="serviceDropDownMenu">Choose the service you are interested in: </label>
            <select name="user[service]" id="serviceDropDownMenu" class="custom-select">
                <option value="" selected disabled>--Please select one of these--</option>
                <option value="fitness">Fitness</option>
                <option value="cosmetology">Cosmetology</option>
                <option value="homeRepairs">Home repairs</option>
                <option value="teaching">Teaching</option>
            </select>

        </div>
        <div id="hiddenInputContainer">
            <label for="hiddenInput" id="hiddenInputLabel"></label>
            <input id="hiddenInput" type="text" name="user[fitnessCategory]">
            <span id="hiddenInputValidationMsg"></span>
        </div>

        <div>
            <label for="request">Would you like us to add somethink new?</label>
            <br>
            <textarea name="user[suggestions]" id="request" rows="10" cols="40" placeholder="Type here..."></textarea>
        </div>

        <div class="checkbox-container">
            <input id="info" type="checkbox" name="user[sendInfo]" value="true">
            <label for="info">Email me about products updates and resources,If this check box is checked, One on One
                will occasionally send helpful and relevant emails.You can <strong>unsubscribe</strong> at any
                time.</label>
        </div>
        <div class="button-container">
            <button type="button" id="submitButton">Submit</button>
        </div>
    </form>
</div>

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p id="modalText"></p>
    </div>
</div>

<script src="../scripts/signup.js"></script>
</body>

</html>