<%layout('layouts/boilerplate')%>
   <% block('head').append('<title>Services</title>') %>
   <% block('head').append('<link rel="stylesheet" href="/styles/services.css">') %>

    <div id="imagesContainer">
        <img class="image" src="images/haircut.jpg" alt="haircut">
        <img class="image" src="images/fitness.jpg" alt="doctors">
        <img class="image" src="images/food.jpg" alt="food">
    </div>

    <div id="categoriesWrapper">

        <%categories.forEach(category=> { %>
            <%let categoryName = category.name.toLowerCase()%>
            <% const arr = categoryName.split(' ') %>
            <% categoryName = arr.join('-') %>
            <a href="/services/<%=categoryName %>">
                <div style="background-color: <%=category.backgroundColor%>">
                    <%=category.name%>
                </div>
            </a>
            <% }) %>
    </div>

