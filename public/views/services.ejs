<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Services</title>
    <link rel="stylesheet" href="/styles/services.css">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet" />
</head>

<body>
    <header>
        <nav>
            <a href="/home">Home</a>
            <a href="">Services</a>
            <a href="/signup">Sign Up</a>
        </nav>
    </header>

    <div id="imagesContainer">
        <img class="image" src="images/haircut.jpg" alt="haircut">
        <img class="image" src="images/fitness.jpg" alt="doctors">
        <img class="image" src="images/food.jpg" alt="food">
    </div>

    <div id="categoriesWrapper">

        <%categories.forEach(category=> { %>
            <a href="<%=category.htmlLocation %>">
                <div style="background-color: <%=category.backgroundColor%>">
                    <%=category.name%>
                </div>
            </a>
            <% }) %>
    </div>

    <%- include('partials/footer') %>
        <script src="../scripts/services.js"></script>

</body>

</html>