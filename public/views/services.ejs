        <span id="serviceListBtn"><i class="fa-solid fa-bars fa-sm" style="color: #000000;"></i></i></span>
    </div>

    <div id="serviceListModal">
        <div id="serviceListContent">
            <div id="categoriesContainer"></div>
            <div id="categoryServicesContainer"></div>
        </div>
    </div>

    <div id="categoriesWrapper">
    </div>

    <footer>
        <p>&nbsp; &#169; George Apostolakis</p>
